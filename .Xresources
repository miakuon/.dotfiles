! The 'HiDPI' section applies if your display has 4K resolution
! --------- HiDPI ---------
Xft.dpi:        180
Xft.autohint:   0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting:    1
Xft.antialias:  1
Xft.rgba:       rgb


! ----------------- Xterm (default) -------------
!XTerm*faceName:           DejaVu Sans Mono:size=12
! XTerm*faceName: xft:Mononoki Nerd Font, \
!                 xft:JoyPixels:size=12, \
!                 xft:Monospace:style=Medium:size=12
XTerm*faceName:            Adwaita:size=12
XTerm*renderFont: true
XTerm*faceSize: 11
XTerm*dynamicColors:      true
XTerm*utf8:               2
XTerm*savelines: 16384
XTerm*locale: true

XTerm*scrollKey:          true
XTerm*scrollBar:          false
XTerm*scrollBar.width:    8
XTerm*rightScrolBar:      true

XTerm*toolBar:            false
XTerm*selectToClipboard:  true
XTerm*reverseVideo:       true

XTerm*translations: #override \n\
    Ctrl <Key>-: smaller-vt-font() \n\
    Ctrl <Key>=: larger-vt-font() \n\
    Ctrl <Key>V: insert-selection(CLIPBOARD) \n

! double-click to select whole URLs :D
XTerm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

! Every shell is a login shell by default (for inclusion of all necessary environment variables)
XTerm*loginshell: true

URxvt*imLocale: ru_RU.UTF-8
URxvt*termName: rxvt-unicode-256color
URxvt*buffered: false
URxvt.intensityStyles: false
URxvt.font: xft:Mononoki Nerd Font:size=12, \
            xft:JoyPixels:size=12, \
            xft:Monospace:style=Medium:size=12
URxvt.saveLines: 2000
URxvt.scrollBar: false
URxvt.cursorColor: white

!! Extensions
URxvt.perl-ext-common: default,matcher,resize-font,url-select,keyboard-select,clipboard
!URxvt.colorUL: #4682B4
!! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: urxvt -e lynx -cfg=~/.lynx.cfg -lss=~/.lynx.lss
URxvt.url-select.underline: true
!! keyboard-select:
URxvt.keysym.M-Escape: perl:keyboard-select:activate
!! resize-font
URxvt.keysym.C-k:   font-size:increase
URxvt.keysym.C-j:   font-size:decrease
!! Matcher
URxvt.url-launcher:	urxvt -e lynx -cfg=~/.lynx.cfg -lss=~/.lynx.lss
URxvt.matcher.button: 1
!!clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt*depth: 32

